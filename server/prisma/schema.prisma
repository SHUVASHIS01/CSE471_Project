generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
}

model Job {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  company        String
  location       String
  description    String
  type           String
  salaryMin      Int?
  salaryMax      Int?
  salaryCurrency String?
  keywords       String[]
  applyUrl       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([title])
  @@index([company])
  @@index([location])
  @@index([createdAt])
}
